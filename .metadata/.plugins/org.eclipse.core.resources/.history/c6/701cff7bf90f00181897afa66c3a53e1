package EjemplosArrays;

public class EjemplosArrays {
	
	static  int i;
	static int j;
	
	public static void main(String[] args) {
		
		int[] otroArray = { 5, 10, 15, 20, 25};
		String[] diasSemana = {"Lunes, Martes, Miercoles, Jueves, Viernes, Sabado, Domingo"};
		
		int[] arrayEnteros;
		arrayEnteros = new int[5];
		arrayEnteros[0] = 7;
		arrayEnteros[1] = 9;
		arrayEnteros[2] = 11;
		arrayEnteros[3] = 12;
		arrayEnteros[4] = 1;
		
		// todos
		System.out.println("Todos los datos");
		for(i = 0; i< 5; i++) {
			System.out.println("array = " + arrayEnteros[i]);
		}
		//Cuadrado
		System.out.println("Cruadrado");
		for (i = 0; i < arrayEnteros.length; i++) {
			arrayEnteros[i] = i * i;
			System.out.println("Array " + i + " = " + arrayEnteros[i]);
		}
		System.out.println("Tercios");
		float[] decimales = new float[10];
		for (j = 0; j < decimales.length; j++) {
			decimales[j] = j / 3f;
			System.out.println("El tercio de " + j + " = " + decimales[j]);
		}
		System.out.println("Elemento");
		for (int elemento : otroArray) {
			System.out.println("Elemento = " + elemento);
		}
		System.out.println("Dias de la semana");
		for (String dias : diasSemana)
			System.out.println (dias);
	}
}
